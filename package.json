{
	"name": "js-twichat",
	"version": "1.0.0",
	"description": "Manage all the events that occur in your twitch direct",
	"main": "jest.config.js",
	"directories": {
		"doc": "doc",
		"test": "test"
	},
	"scripts": {
		"app": "npm run build && node ./index.js",
		"start": "npm run dev --silent",
		"dev": "cross-env NODE_ENV=development nodemon",
		"build": "tsc",
		"test": "npm run build && jest",
		"remove": ""
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Farmaconnect/twichat.git"
	},
	"keywords": [
		"twitch",
		"chat",
		"message",
		"messaging",
		"interface",
		"bot"
	],
	"author": "( JSCode ) Sergio Gonz√°lez Garrido",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/Farmaconnect/twichat/issues"
	},
	"homepage": "https://github.com/Farmaconnect/twichat#readme",
	"nodemonConfig": {
		"watch": [
			"src/**/*"
		],
		"ext": "ts",
		"exec": "npm run build && node ./dist/index.js",
		"verbose": false,
		"legacyWatch": true
	},
	"devDependencies": {
		"@types/jest": "29.1.2",
		"@types/node": "18.8.3",
		"@typescript-eslint/eslint-plugin": "^5.39.0",
		"@typescript-eslint/parser": "^5.39.0",
		"cross-env": "7.0.3",
		"dotenv": "^16.0.3",
		"eslint": "^8.25.0",
		"jest": "29.1.2",
		"nodemon": "2.0.20",
		"ts-jest": "29.0.3",
		"ts-node": "10.9.1",
		"typescript": "4.8.4"
	},
	"dependencies": {
		"@types/node-fetch": "^2.6.2",
		"node-fetch": "^2.6.7"
	}
}